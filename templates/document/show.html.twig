{% extends 'base.html.twig' %}

{% block title %}Document{% endblock %}

{% block body %}






 <div class="container">
        <h2 class="text-center mt-5 mb-3">Afficher Document</h2>
        <div class="card">
            <div class="card-header">
                <a class="btn btn-outline-info float-right" href="{{ path('app_document_index') }}"> 
                    Voir tout les Document
                </a>
            </div>
            <div class="card-body">
                <b class="text-muted">Nom:</b>
                <p>{{ document.name }}</p>
                <b class="text-muted">Description:</b>
                <p>{{ document.description }}</p>
                <b class="text-muted">Filliere:</b>
                <p>{{ document.filliere }}</p>
                <b class="text-muted">Categorie:</b>
                <p>{{ document.categorie }}</p>
<table class="table table-bordered w-75 p-3">
 <thead class="thead-dark">
    <tr>
      <th scope="col">Mot Clé 1</th>
      <th scope="col">Mot Clé 2</th>
      <th scope="col">Mot Clé 3</th>
      <th scope="col">Mot Clé 4</th>
      <th scope="col">Mot Clé 5</th>
    </tr>
  </thead>
<tbody>
  <tr>
    <td>{{ document.keyword1 }}</td>
    <td>{{ document.keyword2 }}</td>
    <td>{{ document.keyword3 }}</td>
    <td>{{ document.keyword4 }}</td>
    <td>{{ document.keyword5 }}</td>
  </tr>
</tbody>
</table>
                <b class="text-muted">Document:</b>

                <p><a target="_blank"  href="{{ asset('uploads/document/' ~ document.file) }}">{{ document.file }}</a></p>

            {% if (app.user.roles[0] is same as('ROLE_ADMIN')) %}

                <a class="btn btn-success float-right" href="{{ path('app_document_validate', {'id': document.id}) }}"> 
                    Valider
                </a>
                {% endif %}
            </div>
        </div>
    </div>



{% endblock %}
