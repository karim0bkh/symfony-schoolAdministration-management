{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <h1>Inscription</h1>

<div class="container">
        <h2 class="text-center mt-5 mb-3">Create Account</h2>
        <div class="card">
            <div class="card-header">
                    Inscription
            </div>
            <div class="card-body">

{{ form_start(registrationForm) }}
    <div class="form-group">
        {{ form_row(registrationForm.fullname, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_row(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_row(registrationForm.matricule, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_row(registrationForm.type, {'attr': {'class': 'form-control'}}) }}
    </div>
     <div class="form-group">
        {{ form_row(registrationForm.filliere, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe' , 'attr': {'class': 'form-control'}}) }}
    </div> 
     <div class="form-group">
        {{ form_row(registrationForm.agreeTerms, {'attr': {'class': 'form-check'}}) }}
    </div>
    <button class="btn {{ button_color|default('btn-primary') }}  mt-3">{{ button_label|default('Inscription') }}</button>

    {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>

{% endblock %}
